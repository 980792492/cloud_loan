.container {
  width: 100vw;
  height: 100vh;
  background-color: #f2f2f2;
}
 .uni-list-item__content-title {
  font-size: 14px;
  color: #808080;
}
 .uni-list-item__extra-text {
  font-size: 14px;
  color: #333;
}
.line {
  height: 10px;
}
.top-title {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #808080;
  line-height: 40px;
  text-align: center;
  background-color: #fff;
}
.amountInput {
  text-align: center;
  width: 100%;
  height: 58px;
  line-height: 58px;
  font-size: 40px;
  position: relative;
  background-color: #fff;
  font-family: DINAlternate-Bold;
}
.bank_icon {
  display: inline-block;
  width: 14px;
  height: 14px;
  margin-right: 4px;
}
.plan-list {
  width: 350px;
  height: auto;
  margin: 12px auto 0;
  padding: 16px;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 14px;
  color: #333;
}
.plan-list-title {
  width: 100%;
  height: 26px;
  line-height: 26px;
}
.plan-list-li {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  line-height: 44px;
  height: 44px;
  border-bottom: 1px dashed #eee;
}
.plan-list text {
  font-size: 28rpx !important;
}
.plan-list text:last-child {
  font-weight: 500;
}

