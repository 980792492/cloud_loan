.container {
  width: 100vw;
  height: calc(100vh - 44px);
  background: #f2f2f2;
  overflow: hidden;
}
.container .tips {
  width: 100%;
  height: 44px;
  line-height: 44px;
  color: #aaa;
  font-size: 12px;
  text-indent: 1em;
}
.container .signUpList {
  width: 100%;
  height: 152px;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 12px;
  font-size: 14px;
  padding-top: 16px;
}
.container .signUpList-li {
  width: 100%;
  height: 44px;
  line-height: 44px;
  color: #808080;
  border-bottom: 1px solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.container .signUpList-li-left {
  width: 90px;
}
.container .signUpList-li-right {
  width: 270px;
  padding-right: 20px;
  box-sizing: border-box;
}
.container .signUpList-li-right input {
  width: 120px;
}
.container .signUpList-li .getNote {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .signUpList-li .getNote-btn {
  color: #3b71d4;
}
.container .signUpList-li .bank_icon {
  display: inline-block;
  width: 14px;
  height: 14px;
}
.container .enter-btn {
  width: 300px;
  height: 44px;
  border-radius: 22px;
  margin: 30px auto 70px;
}
.container .forget-pwd {
  color: #3b71d4;
  font-size: 14rpx;
}
.container .forget-pwd1 {
  color: #ccc;
  width: 160rpx;
  font-size: 14rpx;
}

