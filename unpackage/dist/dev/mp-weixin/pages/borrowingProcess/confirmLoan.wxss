page {
  background: #f2f2f2;
}
.header {
  width: 100%;
  height: 196rpx;
  background: #fff;
}
.line {
  height: 10px;
  background-color: #f2f2f2;
}
.top-title {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #808080;
  line-height: 80rpx;
  text-align: center;
}
.amountInput {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 88rpx;
  position: relative;
}
.amountInput text {
  line-height: 88rpx;
  font-size: 30px;
  color: #000;
  font-weight: bold;
}
.palceholderStyle {
  font-size: 20px;
  color: #ccc;
  font-weight: normal;
}
.bank_icon {
  display: inline-block;
  width: 14px;
  height: 14px;
}
.loan-btn {
  width: 300px;
  height: 44px;
  border-radius: 22px;
  margin: 50px auto 70px;
  background: #2494ff;
  color: #fff;
}
.loan-btn text {
  color: #fff;
}
.unchecked-btn {
  background: rgba(36,148,255,0.4);
}
.remark {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 12px;
}
.remark .icon {
  margin-left: 24rpx;
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.remark .icon image {
  width: 100%;
  height: 100%;
}
.popup-center {
  background-color: #fff;
  width: 100%;
  height: 447px;
  border-radius: 8px 8px 0 0;
}
.popup-center-title {
  text-align: center;
  height: 56px;
  line-height: 56px;
  border-bottom: 1px solid #eee;
  font-size: 16px;
  color: #333;
  font-weight: bold;
  font-family: PingFangSC-Medium;
  position: relative;
}
.popup-center .close-btn {
  position: absolute;
  right: 10px;
}
.popup-center-li {
  width: 100%;
  height: 44px;
  font-size: 14px;
  color: #333;
  line-height: 44px;
  border-bottom: 1px solid #eee;
  text-indent: 1em;
}
.popup-center-plan {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.popup-center-plan .time {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333;
  line-height: inherit;
}
.popup-center-plan .amount {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #333;
  text-align: right;
  line-height: inherit;
  padding-right: 14px;
}
.popup-agreement {
  width: 320px;
  height: 442px;
  background-color: #fff;
  border-radius: 8px;
}
.agreement-content {
  display: block;
  width: 100%;
  height: 320px;
  box-sizing: border-box;
  padding: 0 20px;
  overflow-y: scroll;
  font-size: 14px;
  color: #666;
  line-height: 22px;
}
.agreement-btn {
  width: 300px;
  height: 44px;
  border-radius: 22px;
  margin: 10px auto;
}
.agree-close {
  color: #fff;
  margin: 20px 45% 0;
}

