/* 银行数据弹框 */
.bank-pop {
	height: 812rpx;
	background: #fff;
}
.bank-pop .header {
	padding: 24rpx;
	width: 100%;
	height: 112rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	box-sizing: border-box;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.bank-pop .header .title text {
	font-size: 32rpx;
	color: #333;
}
.bank-pop .header .close-icon {
	width: 48rpx;
	height: 48rpx;
}
.bank-pop .header .close-icon image {
	width: 48rpx;
	height: 48rpx;
}
.bank-pop .content {
	height: 700rpx;

	overflow-y: scroll;
	width: 100%;
	overflow: hidden;
	background: #fff;
}
.bank-pop .content .item {
	width: 100%;
	height: 88rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-top: 1rpx solid #eee;
}
.bank-pop .content .item .icon {
	width: 28rpx;
	height: 28rpx;
	margin-left: 24rpx;
	margin-right: 16rpx;
}
.bank-pop .content .item .icon image {
	width: 28rpx;
	height: 28rpx;
}
.bank-pop .content .item text {
	padding-left: 12rpx;
	font-size: 28rpx;
	color: #333;
	line-height: 88rpx;
}

